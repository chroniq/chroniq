.chrnq-popup-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.chrnq-popup-overlay {
  position: absolute;
  z-index: 2;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  cursor: pointer;
}

.chrnq-popup {
  position: absolute;
  z-index: 2;
  margin: auto;
  display: flex;
  justify-content: center;
  border-radius: 2px;
  background: white;
  box-shadow: 0px 0px 12px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
}

.chrnq-popup-arrow--top:before {
  position: absolute;
  content: '';
  left: 15px;
  top: -6px;
  width: 12px; 
  height: 12px;
  background: white;
  z-index: -1;
  transform: rotate(45deg);
  box-shadow: 0px 0px 6px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
}

