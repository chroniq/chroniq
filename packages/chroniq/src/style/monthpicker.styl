
.chrnq-monthpicker {
  background-color: white;
  user-select: none;
}

.chrnq-monthpicker-table {
  border-collapse: collapse;

  thead th {
    padding: 8px 12px;
    font-size: 12px;
    line-height: 1.5;
    color: #555;
    background: #f1f1f1;
    text-align: left;
    font-weight: 300;
    font-family: sans-serif;
    border-bottom: 1px solid #ddd;
  }

  tbody {
    cursor: pointer;   
  }

  td {
    position: relative;
    text-align: center;
    color: black;
    font-size: 12px;
    line-height: 1.5;
    font-weight: 300;
    height: 40px;
    width: 100px;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    &:hover {
      background-color: #f8viewf8f8;
      color: #446CB3;
      font-weight: 400; 
    }
    &.--is-current {
      color: #446CB3;
      font-weight: 400;
    }
  }

  tbody tr:last-child td {
    border-bottom: 0;
  }
  tbody tr td:last-child {
    border-right: none;
  }
}
