.chrnq-background-event-container {
  width: 0;
  height: 0;
}

.chrnq-background-event-wrapper {
  position: absolute;
  z-index: -2;
}

.chrnq-background-event {
  height: 100%;
  width: 100%;
  padding: 0px 4px;
  &.--is-deactivated {
    filter: grayscale(100%);
  }

  span {
    text-overflow: clip;
    overflow: hidden;
    white-space: nowrap;
    line-height: 1.15
  }
  .chrnq-background-event-title {
    font-weight: 400;
    padding-bottom: 2px;
    flex: 0 0 auto;
    font-size: 11px;
    color: #808080;
  }
}

.chrnq-background-event-clickable {
  position: absolute;
  z-index: 1;
  cursor: pointer;
}
