.chrnq-toolbar {
  display: flex;
  flex: 0 1 auto;
  align-items: center;
  margin-bottom: 10px;
  font-size: 16px;
  font-family: sans-serif;
  padding: 24px;
  margin: 0;

  .chrnq-toolbar--left,
  .chrnq-toolbar--center,
  .chrnq-toolbar--right {
    flex: 1 0 auto
  }

  .chrnq-toolbar--left {
    display: flex;
  }

  .chrnq-toolbar--center {
    display: flex;
    justify-content: center;
  }

  .chrnq-toolbar--right {
    display: flex;
    justify-content: flex-end;
  }

  .chrnq-toolbar-separator {
    display: inline-block;
    font-weight: 300;
    font-size: 16px;
    margin: 0 8px;
    height: 20px;
    vertical-align: middle;
    border-left: 1px solid black;
  }

  .chrnq-toolbar-label {
    //flex-grow:1;
    padding: 0 10px;
    text-align: center;
    line-height: 20px;
    font-size: 16px;
  }

  .chrnq-date-display {
    position: relative;
    display: inline-block;
    height: 38px;
    font-weight: 300;
    text-align: center;
    line-height: 38px;
    font-size: 20px;
    vertical-align: middle;
    padding: 0 8px;
  }

  .chrnq-date-display-dropdown {
    position: absolute;
    top: 0px;
    bottom: 0px;
    right: -20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    &:hover path {
      fill: #446CB3;
    }

    svg {
      display: block;
      flex: 0 1 auto;
      margin-top: -2px;
      width: 15px;
      height: 15px;
    }
  }
}

.chrnq-btn-group {
  display: inline-block;
  white-space: nowrap;

  > h3 {
    border-radius: 0;
    display: inline-block;
    font-weight: 300;
    border-color: #eaeaea;
    font-size: 16px;
    padding: 4px;
    margin: 0 4px;
    cursor: pointer;
    line-height: 20px;
    height: 30px;
    vertical-align: middle;
    border-bottom: 1px solid transparent;
    svg {
      width: 24px;
      display: inline-block;
      vertical-align: middle;
    }
    &.chrnq-active, &.chrnq-active:hover, &.chrnq-active:focus, &.chrnq-active:focus:active,
    &:hover, &:focus, &:focus:active {
      box-shadow: none;
      color: #446CB3;
      outline: none;
    }
    &.chrnq-active {
      border-bottom: 1px solid #446CB3;
    }
  }

  > button:first-child:not(:last-child) {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
  }

  > button:last-child:not(:first-child) {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
  }

  > button:not(:first-child):not(:last-child) {
    border-radius: 0;
  }

  button + button {
    margin-left: -1px;
  }

  .chrnq-rtl & button + button {
    margin-left: 0;
    margin-right: -1px;
  }

  & + button {
    margin-left: 10px;
  }
}
