.chrnq-agenda-view
  display flex
  flex-direction column
  flex 0 1 100%
  overflow auto

  .chrnq-header
    border-bottom 1px solid #eaeaea
    padding 8px 12px
    font-size 12px
    color #555
    background #f1f1f1
    text-align left
    font-weight 300
    font-family sans-serif

    & + &
      padding 4px
      font-size 12px
      border-left 0



  .chrnq-agenda-content table
    border-bottom 1px solid #ddd
    border-top 0


  table
    width 100%
    border-spacing 0
    border-collapse collapse
    tbody > tr > td
      padding 4px 8px
      vertical-align top
      font-size 12px
      font-family sans-serif
      color #555
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis


    .chrnq-agenda-time-cell
      padding-left 15px
      padding-right 15px
      text-transform lowercase


    tbody > tr > td + td
      border-left 1px solid #ddd


    .chrnq-rtl &
      tbody > tr > td + td
        border-left-width 0
        border-right 1px solid #ddd



    tbody > tr + tr
      border-top 1px solid #ddd


    thead > tr > th
      padding 3px 5px
      text-align left

      .chrnq-rtl &
        text-align right




.chrnq-agenda-time-cell
  text-transform lowercase

  .chrnq-continues-after:after
    content ' »'

  .chrnq-continues-prior:before
    content '« '


.chrnq-agenda-date-cell,
.chrnq-agenda-time-cell
  white-space nowrap



.chrnq-agenda-event-cell
  width 100%
