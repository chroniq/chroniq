{
  "extends": [
    "standard",
    "standard-react",
    "standard-flow"
  ],
  "plugins": [
    "react",
    "flowtype",
    "class-property",
    "jest"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "impliedStrict": true,
    "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "globalReturn": false,
        "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "jest/globals": true
  }
}
